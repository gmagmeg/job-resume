<style is:global>
	<style is:global>
    :root {
      --accent: 136, 58, 234;
      --accent-light: 224, 204, 250;
      --accent-dark: 49, 10, 101;
      --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
    }
    html {
      font-family: system-ui, sans-serif;
      background: #f5f5f7;
      background-size: 224px;
    }
    code {
      font-family:
        Menlo,
        Monaco,
        Lucida Console,
        Liberation Mono,
        DejaVu Sans Mono,
        Bitstream Vera Sans Mono,
        Courier New,
        monospace;
    }
    body {
			display: grid;
			place-items: center; /* 水平方向と垂直方向の両方 */
			height: 100vh;
    }
    header {
      background-color: #fff;
      height: 48px;
    }
		.toc {
			width: 60%;
			ul li {
				margin-bottom: 0.2em;
				width: 22em;
			}
		}

		span.history-date {
			font-size: 1em;
			display: inline-block;
			width: 6em;
		}
    span.skill-title {
      font-size: 1em;
			font-weight: bold;
			display: inline-block;
			width: 12em;
    }
    h2 {
			margin-top: 2em;
		}

		.top-h2 {
			margin-top: 0;
		}

		h3, h4 {
			margin-bottom: 0.5rem;
			width: 60%;
		}
		h4 {
			margin-top: 1.5em;
			margin-bottom: 0;
			padding-bottom: 0.25rem;
		}
		h5 {
			font-size: 1em;
			margin-top: 0.25em;
			margin-bottom: 0.25rem;
    	width: 60%;
		}
		.top-h4 {
			margin-top: 0;
		}
		
		h4::before {
			content: "■"; 
			margin-right: 0.25rem;
			color: black;
		}

		p {
			margin-top: 0;
			margin-bottom: 0.25em;
			width: 60%;
		}
    ul {
			padding-top: 0;
			margin-top: 0;
      border-radius: 5px;
      margin-bottom: 16px;
			padding-left: 32px;
			width: 60%;
    }
		ul.none {
			list-style: none;
			margin-left: 0;
			padding-left: 0;
		}
    a {
      color: #2f5ea9;
      cursor: pointer;
    }
		i {
			margin-right: 0.5rem;
		}
		hr {
			margin: 2rem 0;
			width: 75%;
		}
		.history{
			width: 60%;
			text-align: left;
			table {
				margin-left: -0.2em;
				td.date {
				  width: 8em;
				}
			}
		}
		
		.back-to-top {
			position: fixed; 
			bottom: 20px; 
			right: 10vw; 
			width: 50px; 
			height: 50px; 
			background-color: #93a3ad; 
			color: white; 
			text-align: center; 
			line-height: 50px; 
			border-radius: 50%; 
			cursor: pointer; 
			font-family: Arial, sans-serif; 
			font-size: 24px;
			text-decoration: none;
  }

</style>
